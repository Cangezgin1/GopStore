
@using EntityLayer.Concrete
@model List<Students>

@{
    ViewData["Title"] = "SetList";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<br />

<h1 style="font-weight: bold; text-align: center; color: #7e3af2;font-size:large">TANIMLI EĞİTİM SETLERİ</h1>

<br />

@foreach (var item in Model)
 {
    @foreach (var setId in @item.students_Setlers.ToList())
     {
        <div class="grid gap-6 mb-8 md:grid-cols-1 xl:grid-cols-12">
            <div style="background-color: white !important; " class="flex items-center p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">

                <div class="p-3 mr-4 text-orange-500 rounded-full dark:text-orange-100 dark:bg orange-500">
                    <image style="width:130px;height:130px;" src="@setId.Setler.SetImage"></image>
                </div>

                <div>

                    <p style="font-size:large;" class="mb-2 text-sm font-medium text-gray-600 dark:text-gray-400">
                        @setId.Setler.SetAdi<br />
                        @setId.Setler.Fiyat₺
                    </p>

                    <p style="font-size:medium;" class="text-lg font-semibold text-gray-700 dark:text-gray-200">
                        @setId.Setler.SetBilgisi <br /><br />
                        <a class="btn btn-outline-success">SATIN AL</a>
                    </p>

                </div>

            </div>
        </div>
     }
 }