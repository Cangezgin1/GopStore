
@model EntityLayer.Concrete.Students

@{
    ViewData["Title"] = "StudentAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 style="font-weight: bold; text-align: center; color: #7e3af2;font-size:large;">ÖĞRENCİ KAYIT SAYFASI</h1>

@using (Html.BeginForm("StudentAdd", "Home", FormMethod.Post))
{
    <div style="color: #7e3af2;font-weight:bold;" class="form-group">
        @Html.HiddenFor(x => x.StudentID, new { @class = "form-control" })
        <br />
        @Html.LabelForModel("Öğrenci Adı:")
        @Html.TextBoxFor(x => x.İsim, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.İsim, "", new { @class = "text-danger font-weight-bold" })
        <br />
        @Html.Label("Öğrenci Soyadı:")
        @Html.TextBoxFor(x => x.Soyisim, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Soyisim, "", new { @class = "text-danger font-weight-bold" })
        <br />
        @Html.Label("Öğrenci TC Kimlik Numarası:")
        @Html.TextBoxFor(x => x.TCKimlikNumarasi, new { placeholder = "11 haneli olmalıdır.", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TCKimlikNumarasi, "", new { @class = "text-danger font-weight-bold" })
        <br />
        @Html.Label("Okul Numarası:")
        @Html.TextBoxFor(x => x.OkulNumarasi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.OkulNumarasi, "", new { @class = "text-danger font-weight-bold" })
        <br />
        @Html.Label("Sınıfı:")
        @Html.TextBoxFor(x => x.Sinif, new { placeholder = "örn: 8-A", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Sinif, "", new { @class = "text-danger font-weight-bold" })
        <br />
        @Html.Label("Şifre:")
        @Html.TextBoxFor(x => x.Sifre, new {@class = "form-control" })
        @Html.ValidationMessageFor(x => x.Sifre, "", new { @class = "text-danger font-weight-bold" })
        <br />
        <br />
        <button class="btn btn-success">KAYIT</button>
    </div>
}

