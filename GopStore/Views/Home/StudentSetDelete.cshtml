@model EntityLayer.Concrete.Students_Setler

@{
    ViewData["Title"] = "AdminAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h1 style="font-weight: bold; text-align: center; color: #7e3af2;font-size:large;">ÖĞRENCİYE EĞİTİM SETİ ÇIKARMA</h1>

<br />

@using (Html.BeginForm("StudentSetDelete", "Home", FormMethod.Post))
{
    <div style="color: #7e3af2;font-weight:bold;" class="form-group">
        @Html.Label("Öğrenci ID:")
        @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control" })
        <br />
        @Html.Label("Silinecek Eğitim Setini Seçiniz:")
        @Html.DropDownListFor(x => x.SetID, (List<SelectListItem>)ViewBag.valuesSet, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-success">SİL</button>
    </div>
}