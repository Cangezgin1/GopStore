@using EntityLayer.Concrete
@model List<Admins>


@{
    ViewData["Title"] = "AdminList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <br />
    <h1 style="font-weight: bold; text-align: center; color: #7e3af2;font-size:large">ADMİN LİSTESİ</h1>
    <br /><br />
    <div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
        <div class="w-full overflow-x-auto">
            <table class="w-full whitespace-no-wrap">
                <thead>
                    <tr style="color:black;font-weight:bold;" class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                        <th class="px-4 py-3">ID</th>
                        <th class="px-4 py-3">İsim</th>
                        <th class="px-4 py-3">Soyisim</th>
                        <th class="px-4 py-3">Mail</th>
                        <th class="px-4 py-3">Sil</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                        <tr class="text-gray-700 dark:text-gray-400">

                            <td style="font-weight:bold" class="px-4 py-4 text-sm">
                                @item.AdminID
                            </td>

                            <td class="px-4 py-4 text-sm">
                                @item.İsim
                            </td>

                            <td class="px-4 py-4 text-sm">
                                @item.Soyisim
                            </td>

                            <td class="px-4 py-4 text-sm">
                                @item.AdminMail
                            </td>

                            <td class="px-3 py-3 text-sm">
                                <a class="btn btn-danger" href="/Home/AdminDelete/@item.AdminID">Sil</a>
                            </td>

                        </tr>

                    </tbody>
                }
            </table>
        </div>
    </div>
    <a href="/Home/AdminAdd/" class="btn btn-success"><button style="color:white">Admin Ekle</button></a>
</body>

